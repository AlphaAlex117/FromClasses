package exam3;
import java.util.ArrayList;

public class ExerciseOneA
{

	public static int RecursiveMethod(int numBricks)
	{
		if (numBricks < 0)
		{
			return 0;
		}
		else if (numBricks == 0)
		{
			return 1;
		}
		else
		{
			return RecursiveMethod(numBricks - 1) + RecursiveMethod(numBricks - 2) + RecursiveMethod(numBricks - 3);
		}
	}
	
